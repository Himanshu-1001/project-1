extends base.pug

block style 
    style 
        include ../static/style.css
        include ../static/contact.css

block content
    section#call-section 
        h1 CONTACT US
    section#contact-section 
        h1 Contact us
        form(action="/submit",method='post',class='myform') 
            input(type="text", class='myinput',name='name',placeholder='enter your name')
            input(type="email", class='myinput',name='email',placeholder='enter your email')
            input(type="number", class='myinput',name='age',placeholder='enter your age')
            input(type="number", class='myinput',name='mobileno',placeholder='enter your mobileno')
            input(type="submit", class='myinput',name='submit')
            